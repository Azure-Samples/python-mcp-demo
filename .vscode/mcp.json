{
  "servers": {
    "expenses-mcp": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}",
      "args": [
        "run",
        "main.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    "expenses-mcp-debug": {
      "type": "stdio",
      "command": "uv",
      "cwd": "${workspaceFolder}",
      "args": [
        "run",
        "--",
        "python",
        "-m",
        "debugpy",
        "--listen",
        "0.0.0.0:5678",
        "main.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    "expenses-mcp-http": {
      "type": "http",
      "url": "http://localhost:8000/mcp"
    }
  },
  "inputs": []
}
